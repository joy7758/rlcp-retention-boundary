{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FLOPs Log",
  "type": "object",
  "required": ["total_flops", "num_records", "records"],
  "properties": {
    "total_flops": {"type": "number", "minimum": 0.0},
    "num_records": {"type": "integer", "minimum": 1},
    "records": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["step", "flops"],
        "properties": {
          "step": {"type": "integer", "minimum": 0},
          "flops": {"type": "number", "minimum": 0.0}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": true
}
